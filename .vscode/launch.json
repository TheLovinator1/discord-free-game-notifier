{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "[Debug] Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "[Check] All notifiers (Bot)",
            "type": "debugpy",
            "request": "launch",
            "module": "discord_free_game_notifier.main",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "justMyCode": true
        },
